<div class="{{ section.class }} section-questions" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="section-questions__left">
      {% if section.settings.heading != blank %}
        <h2 class="section-questions__left-heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>

    <div class="section-questions__right">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="accordion-item">
            <accordion-dropdown class="block ">
              <h4 class="accordion-title">
                <span class="heading">{{ block.settings.title }} </span>
                <div class="chevron-arrow">
                  <span class="open ">{% render 'faq-dropdown-up' %}</span>
                  <span class="close hidden">{% render 'faq-dropdown-down' %}</span>
                </div>
              </h4>
              <div class="accordion-content">
                {{ block.settings.content }}
              </div>
          </accordion-dropdown>
        </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
  [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  @media all and (min-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Home Questions",
  "class": "home-questions",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your top questions, answered"
    },
    {
      "type": "header",
      "content": "Space section"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Space Top Desktop",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Space Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Space Top Mobile",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Space Bottom Mobile",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "What results does Inito give?"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Inito gives results as: High Fertility, Peak Fertility or Ovulation Confirmed. Inito also shows you the charts and actual values of all 3 hormones."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Questions"
    }
  ]
}
{% endschema %}
