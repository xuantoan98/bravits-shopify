<div class="{{ section.class }} section-list-logo" data-section-id="{{ section.id }}">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h4 class="section-list-logo-heading">{{ section.settings.heading }}</h4>
    {% endif %}

    <div class="section-list-logo__lists">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="logo-item">
            {% if block.settings.logo != blank %}
              <img
                src="{{ block.settings.logo | image_url }}"
                alt=""
                loading="lazy"
                width="{{ block.settings.logo.width }}"
                height="{{ block.settings.logo.height }}"
                class="block w-full h-full desktop"
              >
            {% endif %}

            {% if block.settings.logo_mobile != blank %}
              <img
                src="{{ block.settings.logo_mobile | image_url }}"
                alt=""
                loading="lazy"
                width="{{ block.settings.logo_mobile.width }}"
                height="{{ block.settings.logo_mobile.height }}"
                style="--width: {{ block.settings.logo_mobile.width }}; --height: {{ block.settings.logo_mobile.height }}"
                class="block w-full h-full mobile"
              >
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
  [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  @media all and (min-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% schema %}
  {
    "name": "List Logo",
    "class": "list-logo",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "As Seen on"
      },
      {
        "type": "header",
        "content": "Space section"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Space Top Desktop",
        "default": 32
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Space Bottom Desktop",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Space Top Mobile",
        "default": 32
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Space Bottom Mobile",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          },
          {
            "type": "image_picker",
            "id": "logo_mobile",
            "label": "Logo Mobile"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home List Logo"
      }
    ]
  }
{% endschema %}

