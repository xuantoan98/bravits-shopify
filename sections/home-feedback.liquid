<div class="{{ section.class }} section-feedback" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="section-feedback__left">
        {% if section.settings.feedback_content != blank %}
          <div class="section-feedback__left-content">
            {{ section.settings.feedback_content }}
          </div>
        {% endif %}

        <div class="section-feedback__left-card">
          {% if section.settings.image_avatar != blank %}
            <img
              src="{{ section.settings.image_avatar | image_url }}"
              alt=""
              loading="lazy"
              width="{{ section.settings.image_avatar.width }}"
              height="{{ section.settings.image_avatar.height }}"
              class="block w-full h-full"
            >
          {% endif %}

          <div class="section-feedback__left-card--content">
            {% if section.settings.name_avatar != blank %}
              <h5 class="card-name">{{ section.settings.name_avatar }}</h5>
            {% endif %}

            {% if section.settings.position_avatar != blank %}
              <h6 class="card-position">{{ section.settings.position_avatar }}</h6>
            {% endif %}
            </div>
        </div>
      </div>

      <div class="section-feedback__right">
        {% if section.settings.heading != blank %}
          <h2 class="section-feedback__heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="section-feedback__description">{{ section.settings.description }}</div>
        {% endif %}

        {% if section.settings.note != blank %}
          <p class="section-feedback__note">{{ section.settings.note }}</p>
        {% endif %}
      </div>
    </div>
</div>

<style>
  [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  @media all and (min-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Home Feedback",
  "class": "home-feedback",
  "settings": [
    {
      "type": "header",
      "content": "Content Left"
    },
    {
      "type": "textarea",
      "id": "feedback_content",
      "label": "Content",
      "default": "Inito is all that you need to give you the best chance of conception."
    },
    {
      "type": "image_picker",
      "id": "image_avatar",
      "label": "Image Avatar"
    },
    {
      "type": "text",
      "id": "name_avatar",
      "label": "Name Avatar",
      "default": "Dr. Rachel Wagner"
    },
    {
      "type": "text",
      "id": "position_avatar",
      "label": "Position Avatar",
      "default": "MD"
    },
    {
      "type": "header",
      "content": "Content Right"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why measure Progesterone?"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p></p>"
    },
    {
      "type": "text",
      "id": "note",
      "label": "Note",
      "default": "* Source: National Institutes of Health",
    },
    {
      "type": "header",
      "content": "Space section"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Space Top Desktop",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Space Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Space Top Mobile",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Space Bottom Mobile",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Home Feedback"
    }
  ]
}
{% endschema %}
