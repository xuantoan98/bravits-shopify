<div class="section-texts" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="section-texts__lists">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'text_1' %}
              <div class="block-text">
                {% if block.settings.heading != blank %}
                  <h4 class="block-text__heading">{{ block.settings.heading }}</h4>
                {% endif %}

                {% if block.settings.description != blank %}
                  <div class="block-text__description">
                    {{ block.settings.description }}
                  </div>
                {% endif %}
              </div>
            {% when 'text_2' %}
              <div class="block-text">
                {% if block.settings.heading != blank %}
                  <h4 class="block-text__heading">{{ block.settings.heading }}</h4>
                {% endif %}

                {% if block.settings.description != blank %}
                  <div class="block-text__description">
                    {{ block.settings.description }}
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
  [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  @media all and (min-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Home Texts",
  "class": "home-texts",
  "settings": [
    {
      "type": "header",
      "content": "Space section"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Space Top Desktop",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Space Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Space Top Mobile",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Space Bottom Mobile",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "text_1",
      "name": "Block 1",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Not all ovulation tests are created equal"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p></p>"
        }
      ]
    },
    {
      "type": "text_2",
      "name": "Block 2",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Not all ovulation tests are created equal"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p></p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Texts"
    }
  ]
}
{% endschema %}
